{% extends "Layout/main.layout.twig" %}

{% block title %}Cadastro | Job4You{% endblock %}

{% block content %}
	<!-- FORMULÃRIO DE CADASTRO -->
	<main class="flex-grow py-12">
		<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="bg-white shadow rounded-lg overflow-hidden">
				<div class="p-8 sm:p-10">
					{% include "Partials/usuarios/_cadastro-header.twig" %}

					<form action="/usuarios/cadastro" method="POST" class="space-y-6">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							{% include "Partials/usuarios/_cadastro-form-fields.twig" %}
						</div>

						<div class="pt-4">
							<button type="submit" class="w-full bg-primary-500 hover:bg-primary-600 text-white py-3 px-4 rounded-md font-medium transition-colors">
								<i class="bi bi-person-plus mr-2"></i>
								Cadastrar
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
